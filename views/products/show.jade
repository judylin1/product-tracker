extends ../layout

block content
  include ../partials/header
  main
    .container
      if product
        table#paddingtop.table.table-hover
          thead
            tr
              th Product Name
              th Product Price
              th Purchase At
              th Guarantee
              th Purchased
          tbody
            tr
              td=product.name
              td $
                =product.price
              td
                a(href=product.url target='_blank') !{product.url}
              td=product.guarantee
              td
                if cookieId
                  input#purchase(type='checkbox' checked=(purchase ? true : undefined))
                  label(for='purchase')
          a.btn.btn-primary(href='/users/'+ cookieId + '/products/' + product._id + '/edit') Edit
          a#borderwhite.btn.btn-default(href='/users/'+ cookieId + '/products') Back
      else
        a.button.submit(href='/') Back
